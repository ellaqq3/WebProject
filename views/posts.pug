doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    link(rel='stylesheet', href='styles.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')

    style
      include ../public/styles.css

body
  .container
    .col.s12.m2
      .col.s5.m12
        .col.s2.m12
      .col.s2.m12
    .col.s2.m12
      h1= title
      h6 Here you can post and read posts
        br
        br
        br
        br
        br


  .container.yellow.lighten-5.hoverable
    .row
    h5 Write a new post
    h6 Character limit is 200
      br
      br
      form(method='POST' action='/posts/create')
        .form-group.input-field
          textarea#content.form-control(type='text', class='materialize-textarea', data-length='300', maxlength='300', name='content')
          label(for='content') Write here
        button.btn.grey.waves-effect.waves-light(type='submit' name='action') Post
        .row
        .row
        .row
    

  .container.yellow.lighten-5.hoverable
    .row
    h5 Post Wall
      br
      br
      each post in post_list
        .col.s8.m6.yellow.lighten-5
          h6.left-align #{post.author}: #{post.content} - #{post.time} - #{post.date}
        .row
      else
          p(style=" color: #e0e0e0 ") No posts on the Post Wall
          .row
          .row

  .row
      form(method="POST" action="/posts/logout")
          button.btn.grey.waves-effect.waves-light(type='submit' name='action') Logout

    
    
